<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateNewAccount">

    <EditText
        android:id="@+id/newAccountPassword_PlainText"
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        app:layout_constraintStart_toStartOf="@id/newAccountUsername_PlainText"
        app:layout_constraintTop_toBottomOf="@id/newAccountUsername_PlainText" />

    <EditText
        android:id="@+id/newAccountUsername_PlainText"
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:ems="10"
        android:hint="Username"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.46"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView"
        app:layout_constraintVertical_bias="0.18" />

    <Button
        android:id="@+id/createNewAccount_Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create a new account"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/newAccountPassword_PlainText"
        app:layout_constraintVertical_bias="0.8" />

    <EditText
        android:id="@+id/newAccountAddress_PlainText"
        android:layout_width="179dp"
        android:layout_height="40dp"
        android:ems="10"
        android:hint="Apiary Address"
        android:inputType="textPersonName"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/newAccountEmail_PlainText"
        app:layout_constraintHorizontal_bias="0.18"
        app:layout_constraintStart_toStartOf="@id/newAccountEmail_PlainText"
        app:layout_constraintTop_toBottomOf="@id/newAccountEmail_PlainText"
        app:layout_constraintVertical_bias="0.015" />

    <EditText
        android:id="@+id/newAccountEmail_PlainText"
        android:layout_width="179dp"
        android:layout_height="40dp"
        android:ems="10"
        android:hint="Email Address"
        android:inputType="textEmailAddress"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintEnd_toEndOf="@id/newAccountPhone_PlainText"
        app:layout_constraintHorizontal_bias="0.835"
        app:layout_constraintStart_toStartOf="@id/newAccountPhone_PlainText"
        app:layout_constraintTop_toBottomOf="@id/newAccountPhone_PlainText" />

    <EditText
        android:id="@+id/newAccountPhone_PlainText"
        android:layout_width="179dp"
        android:layout_height="40dp"
        android:ems="10"
        android:hint="Phone Number"
        android:inputType="phone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.38"
        app:layout_constraintStart_toEndOf="@id/newAccountUsername_PlainText"
        app:layout_constraintTop_toBottomOf="@id/textView"
        app:layout_constraintVertical_bias="0.18" />

    <ImageView
        android:id="@+id/IDProf"
        android:layout_width="156dp"
        android:layout_height="126dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/newAccountUsername_PlainText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.19999999"
        tools:srcCompat="@tools:sample/avatars" />

    <Button
        android:id="@+id/upload_Button"
        android:layout_width="141dp"
        android:layout_height="49dp"
        android:layout_marginTop="12dp"
        android:text="Change Picture"
        app:layout_constraintEnd_toEndOf="@id/IDProf"
        app:layout_constraintStart_toStartOf="@id/IDProf"
        app:layout_constraintTop_toBottomOf="@+id/IDProf" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFC107"

        android:gravity="center|top"
        android:padding="10sp"
        android:text="Create an Account"
        android:textAppearance="@style/TextAppearance.AppCompat.Display3"
        android:textColor="#000"
        android:textSize="26sp"
        android:textStyle="normal|bold"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />



</androidx.constraintlayout.widget.ConstraintLayout>