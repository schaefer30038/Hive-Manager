<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateNewAccount">

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ic_liquid_cheese2"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="41dp" />

    <ImageView
        android:id="@+id/Wave_Extension"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/honey"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/Wave_Img"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="120dp"
        android:src="@drawable/ic_wave"
        app:layout_constraintTop_toTopOf="@id/Wave_Extension"
        tools:layout_editor_absoluteX="0dp" />

    <ImageView
        android:id="@+id/IDProf"
        android:layout_width="176dp"
        android:layout_height="146dp"
        app:layout_constraintBottom_toTopOf="@id/newAccountEmail_PlainText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.24000001"
        tools:srcCompat="@tools:sample/avatars" />

    <EditText
        android:id="@+id/newAccountEmail_PlainText"
        android:layout_width="179dp"
        android:layout_height="45dp"
        android:ems="10"
        android:hint="Email Address"
        android:inputType="textEmailAddress"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintBottom_toTopOf="@id/scrollView2"
        app:layout_constraintEnd_toStartOf="@id/newAccountPhone_PlainText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/upload_Button"
        app:layout_constraintVertical_bias="0.2" />

    <Button
        android:id="@+id/setHivepref_Button"
        android:layout_width="179dp"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:background="@color/honey"
        android:text="Update Profile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/newAccountEmail_PlainText" />

    <EditText
        android:id="@+id/newAccountPhone_PlainText"
        android:layout_width="179dp"
        android:layout_height="45dp"
        android:ems="10"
        android:hint="Phone Number"
        android:inputType="phone"
        app:layout_constraintBottom_toTopOf="@id/scrollView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/newAccountEmail_PlainText"
        app:layout_constraintTop_toBottomOf="@+id/upload_Button"
        app:layout_constraintVertical_bias="0.2" />

    <Button
        android:id="@+id/upload_Button"
        android:layout_width="179dp"
        android:layout_height="45dp"
        android:layout_marginTop="8dp"
        android:background="@color/honey"
        android:text="Change Picture"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/IDProf" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/honey"
        android:fontFamily="casual"
        android:gravity="center|top"
        android:padding="10sp"
        android:text="Update Public Profile"

        android:textAppearance="@style/TextAppearance.AppCompat.Display3"
        android:textColor="#000"
        android:textSize="26sp"
        android:textStyle="normal|bold"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="159dp"
        android:layout_height="24dp"
        android:text="Select Hive Information"


        app:layout_constraintBottom_toTopOf="@+id/scrollView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/setHivepref_Button" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="354dp"
        android:layout_height="229dp"
        android:layout_marginBottom="24dp"
        android:isScrollContainer="false"
        app:layout_constraintBottom_toBottomOf="@+id/view2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:text="Result"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView2" />

            <CheckBox
                android:id="@+id/health"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:text="Health"
                app:layout_constraintStart_toEndOf="@+id/result"
                app:layout_constraintTop_toTopOf="@+id/result" />

            <CheckBox
                android:id="@+id/honey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:text="Honey Stores"
                app:layout_constraintStart_toEndOf="@+id/health"
                app:layout_constraintTop_toTopOf="@+id/result" />

            <CheckBox
                android:id="@+id/queen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:text="Queen Production"
                app:layout_constraintTop_toTopOf="@+id/result"
                tools:layout_editor_absoluteX="286dp" />

            <CheckBox
                android:id="@+id/equipmentHive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:text="Hive \nEquipment." />

            <CheckBox
                android:id="@+id/equipmentInvent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:text="Inventory \nEquipment" />

            <CheckBox
                android:id="@+id/loss"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:text="Losses" />

            <CheckBox
                android:id="@+id/gain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:text="Gains"
                tools:layout_editor_absoluteX="324dp" />

        </LinearLayout>


    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>