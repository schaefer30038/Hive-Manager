<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ApiarySettings">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/portrait_honeycomb" />

    <ListView
        android:id="@+id/listview"
        android:layout_width="300dp"
        android:layout_height="300dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.87" />


    <TextView
        android:id="@+id/apiaryInfo_TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:gravity="center|top"
        android:padding="10sp"

        android:text="Apiary Information"
        android:textAppearance="@style/TextAppearance.AppCompat.Display3"
        android:textColor="#000"
        android:textSize="26sp"
        android:textStyle="normal|bold"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.04000002" />

    <Button
        android:id="@+id/createApiary_Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create new Apiary"
        app:layout_constraintBottom_toTopOf="@id/delete_Apiary_Button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/nameOfApiary_TextView"
        app:layout_constraintTop_toBottomOf="@id/apiaryInfo_TextView"
        app:layout_constraintVertical_bias="0.17000002" />

    <Button
        android:id="@+id/delete_Apiary_Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete Apiary"
        app:layout_constraintBottom_toTopOf="@id/updateApiary_Button"
        app:layout_constraintStart_toStartOf="@id/createApiary_Button"
        app:layout_constraintTop_toBottomOf="@+id/createApiary_Button" />

    <Button
        android:id="@+id/updateApiary_Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update Apiary"
        app:layout_constraintBottom_toTopOf="@id/listview"
        app:layout_constraintStart_toStartOf="@id/delete_Apiary_Button"
        app:layout_constraintTop_toBottomOf="@+id/delete_Apiary_Button" />

    <EditText
        android:id="@+id/nameOfApiary_TextView"
        android:layout_width="137dp"
        android:layout_height="48dp"
        android:hint="Name of Apiary"
        android:inputType="text"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.13"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.26">

    </EditText>
</androidx.constraintlayout.widget.ConstraintLayout>
